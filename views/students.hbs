
<body>
<div class="row">
 <div class="centerer">
 <br>
 <h2>Students
 <a href="/students/add" class="btn btn-success float-right"><i class="fas fa-user-plus"></i>Add New Student</a></h2>
 <hr />
 <table class="table">
    <thead>
    <tr>
<th>Student Num</th>
<th>Full Name</th>
<th>Email</th>
<th>Address</th>
<th>Status</th>
<th>Course ID</th>
<th>Delete Record</th>
</tr>
</thead>
<tbody>
{{#each students}}

<tr>
<td>{{this.studentNum}}</td>
<td><a href="/student/{{this.studentNum}}"> {{this.firstName}} {{this.lastName}}</a></td>
<td><a href="mailto:{{this.email}}"> {{this.email}}</a></td>
<td>{{this.addressStreet}} {{this.addressCity}} {{this.addressProvince}}</td>
<td>{{this.status}}</td>
<td><a href="/students?course={{this.course}}"> {{this.course}}</a></td>
<td><a href="/students/delete/{{this.studentNum}}" class="btn btn-danger">Remove</a></td>
</tr>

{{/each}}
</tbody>
</table>
 </div>
</div>
</body>