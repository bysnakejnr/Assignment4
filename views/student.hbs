<div class="centerer">
  <main class="col-md-12">
    <br>

    <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
    <hr />
    <form method="post" action="/student/update" id="updateStudent">
      <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>First Name:</label>
              <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Last Name:</label>
              <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Email:</label>
              <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Address(Street):</label>
              <input class="form-control" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" />
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Address(City):</label>
              <input class="form-control" name="addressCity" type="text" value="{{viewData.student.addressCity}}" />
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label>Address(Province):</label>
              <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2">
            <div class="form-group">
              {{#if student.TA}}
              <input class="form-control-sm" name="TA" id="TA" type="checkbox" checked />
              <label for="TA">Teacher Assistant</label>
              {{else}}<label for="TA">
                <input class="form-control-sm" name="TA" id="TA" type="checkbox" />
                Teacher Assistant</label>
              {{/if}}
            </div>
          </div>


          <div class="col-md-3">
            <div class="form-group">
              {{#equal viewData.student.status "Full Time"}}

              <input class="form" id="fulltime" name="status" type="radio" value="Full Time" checked />
              <label for="fulltime">Full Time</label>

              <input class="form" id="parttime" name="status" type="radio" value="Part Time" />
              <label for="parttime">Part Time</label>
              {{/equal}}
              {{#equal viewData.student.status "Part Time"}}
              <label for="fulltime">Full Time</label>
              <input class="form" id="fulltime" name="status" type="radio" value="Full Time" />
              <label for="parttime">Part Time</label>
              <input class="form" id="parttime" name="status" type="radio" value="Part Time" checked />
              {{/equal}}
            </div>
          </div>
          <div class="col-md-1"></div>

          
          <div class="col-md-6">
            <div class="form-group">
              <label for="course">Enrolled in Course:</label>
                {{#if viewData.courses}}
                <select class="form-control" name="course" id="course">
                  <option value="">Select Course</option>
                  {{#each viewData.courses}}
                  <option value="{{this.courseId}}" {{#if selected}} selected {{/if}}>{{this.courseCode}} </option>
                  {{/each}}
                </select>
                {{else}}
                <div>No Courses</div>
                {{/if}}

            </div>
          </div>
        </div>

      </fieldset>
      <hr />
      <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
    </form>

  </main>
</div>