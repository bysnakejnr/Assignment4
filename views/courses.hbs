
<body>
<div class="row">
 <div class="centerer">
 <br>
 <h2>Courses
    <a href="/courses/add" class="btn btn-success float-right">Add New Course</a></h2>
 </h2>
 <hr />
 <table class="table">
    <thead>
    <tr>
<th>Course Code</th>
<th>Course Description</th>
<th>Delete</th>
</tr>
</thead>
<tbody>
   {{#if courses}}
{{#each courses}}
<tr>
<td><a href="/course/{{this.courseId}}"> {{this.courseCode}}</a></td>
<td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
<td><a href="course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td>
</tr>

{{/each}}
{{else}}
<tr>
   <td colspan="3" align="center">{{message}}</td>
</tr>

{{/if}}
</tbody>
</table>
 </div>
</div>
</body>